{
    "languageserver": {
        "golang": {
            "command": "gopls",
            "filetypes": [
                "go"
            ],
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ]
        },
        "terraform": {
            "command": "terraform-lsp",
            "filetypes": [
                "tf"
            ],
            "rootPatterns": [
                ".vim/",
                ".git/"
            ]
        }
    }
}
